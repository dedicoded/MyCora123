modules = ["nodejs-20", "web", "postgresql-16"]
run = "npm run dev"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "next start"]
build = ["sh", "-c", "npm run build"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 5000
externalPort = 5000

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Dev Server"
author = 46065244
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Deploy Ready Check"
author = 46065244
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run validate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run test"

[[workflows.workflow]]
name = "Clean Dev Server"
author = 46065244
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:clean"

[[workflows.workflow]]
name = "Restart Dev Server"
author = 46065244
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"next dev\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:clean"

[[workflows.workflow]]
name = "Quick Restart"
author = 46065244
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"next dev\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
